{
  "name": "hardhat-project",
  "scripts": {
    "clean": "hardhat clean",
    "commit": "git-cz",
    "compile": "hardhat compile",
    "test": "hardhat test",
    "coverage": "hardhat coverage --solcoverjs ./.solcover.js --temp artifacts --testfiles \"./test/**/*.ts\"",
    "predeploy": "npm run compile && npm run typechain",
    "deploy": "hardhat run scripts/deploy.ts",
    "predeploy:network": "npm run predeploy",
    "deploy:network": "hardhat run scripts/deploy.ts --network",
    "flatten": "hardhat flatten contracts/$npm_config_name.sol > flattened/$npm_config_name.sol",
    "graph:codegen": "graph codegen --output-dir graph/codegen",
    "graph:build": "graph build --output-dir graph/build",
    "graph:test": "graph/test.sh",
    "graph:build-test": "npm run graph:build && npm run graph:test",
    "graph:deploy": "graph deploy --product hosted-service little-phil/xillion-bsc-two",
    "lint": "npm run lint:sol && npm run lint:ts",
    "lint:sol": "solhint --config ./.solhint.json --max-warnings 0 \"contracts/**/*.sol\"",
    "lint:ts": "eslint --config ./.eslintrc.yaml --ignore-path ./.eslintignore --ext .js,.ts .",
    "lint-staged": "lint-staged",
    "postinstall": "husky install",
    "ganache:start": "ganache-cli -h 0.0.0.0",
    "typechain": "hardhat typechain",
    "watch": "hardhat compile && npx hardhat watch compilation"
  },
  "devDependencies": {
    "@ethersproject/abi": "^5.6.0",
    "@ethersproject/abstract-signer": "^5.6.0",
    "@ethersproject/bignumber": "^5.6.0",
    "@ethersproject/bytes": "^5.6.1",
    "@ethersproject/providers": "^5.6.2",
    "@nomiclabs/hardhat-ethers": "^2.0.5",
    "@nomiclabs/hardhat-etherscan": "^3.0.3",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@typechain/ethers-v5": "^7.2.0",
    "@typechain/hardhat": "^2.3.1",
    "@types/chai": "^4.3.0",
    "@types/config": "^0.0.41",
    "@types/mocha": "^9.1.0",
    "@types/node": "^12.20.47",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "chai": "^4.3.6",
    "dotenv": "^10.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-promise": "^5.2.0",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.6.1",
    "hardhat": "^2.9.1",
    "hardhat-gas-reporter": "^1.0.8",
    "husky": "^7.0.0",
    "prettier": "^2.6.2",
    "prettier-plugin-solidity": "^1.0.0-beta.13",
    "solhint": "^3.3.7",
    "solidity-coverage": "^0.7.20",
    "ts-node": "^10.7.0",
    "typechain": "^5.2.0",
    "typescript": "^4.6.2"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.6.0",
    "config": "^3.3.7",
    "solc": "^0.8.13"
  },
  "scripts": {
    "prepare": "husky install"
  }
}